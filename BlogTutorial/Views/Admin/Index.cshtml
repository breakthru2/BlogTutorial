@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AdminIndexLayout.cshtml";
}
<div id="layoutAuthentication_content">
    <main>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-5">
                    <div class="card shadow-lg border-0 rounded-lg mt-5">
                        <div class="card-header"><h3 class="text-center font-weight-light my-4">Login</h3></div>
                        <div class="card-body">
                            <form asp-controller="Admin" asp-action="Index" method="post">
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="form-group">
                                    <label class="small mb-1" asp-for="Email"></label>
                                    <input class="form-control py-4" asp-for="Email" type="email" placeholder="Enter email address" />
                                </div>
                                <span class="text-danger" asp-validation-for="Email"></span>
                                <div class="form-group">
                                    <label class="small mb-1" asp-for="Password"></label>
                                    <input class="form-control py-4" asp-for="Password" type="password" placeholder="Enter password" />
                                </div>
                                <span class="text-danger" asp-validation-for="Password"></span>
                                <div class="form-group">
                                    <div class="custom-control custom-checkbox"><input class="custom-control-input" id="rememberPasswordCheck" type="checkbox" /><label class="custom-control-label" for="rememberPasswordCheck">Remember password</label></div>
                                </div>
                                <div class="form-group d-flex align-items-center justify-content-between mt-4 mb-0"><a class="small" href="#">Forgot Password?</a><button type="submit" class="btn btn-primary">Log in</button></div>
                            </form>
                        </div>
                        <div class="card-footer text-center">
                            <div class="small"><a href="register.html">Need an account? Sign up!</a></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>